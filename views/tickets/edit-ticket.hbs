<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar Ticket</h3>
    </div>
    <div class="card-body">
      <form action="/tickets/edit-ticket/{{ticket._id}}" method="post">
        <input type="hidden" name="_method">
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Titulo" value="{{ticket.title}}">
        </div>
        <div class="form-group">
          <select name="type" class="form-control" placeholder="Type" value="{{ticket.type}}">
            <option value="Web">Web</option>
            <option value="Interno">Interno</option>
          </select >
        </div>
        <div class="form-group">
          <textarea name="description" rows="8" cols="80" class="form-control" placeholder="Descripcion">{{ticket.description}}</textarea>
        </div>
        <button type="submit" name="button" class="btn btn-primary btn-block">
          Guardar
        </button>
      </form>
    </div>
  </div>
</div>
